@inject IAdminCompanyInformationService CompanyInformationService
@inject IAdminAccountService AdminAccountService
@using ECom.Shared.DTOs
@using ECom.Shared.Constants
@using ECom.Shared.Abstract.Services.Admin
@using ECom.Shared.Extensions
@inherits SharedBasePage
@inject AuthenticationStateProvider AuthenticationStateProvider


<RadzenBody>
  <div class="rz-p-4">

    <PageTitle>@Loc["login"]</PageTitle>

    <RadzenRow Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="max-width: 900px; overflow: hidden; width: 100%;">
      <RadzenColumn Size="12" SizeMD="5">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="background: var(--rz-primary-light) no-repeat 100% 70% fixed url('data:image/svg+xml;base64,'); height: 100%;">

          <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H4" Class="rz-color-white rz-mb-6">@welcomeMessage</RadzenText>
          <RadzenText TextStyle="TextStyle.Body1" Class="rz-color-white">@Loc["login_page_message"]</RadzenText>
        </RadzenCard>
      </RadzenColumn>
      <RadzenColumn Size="12" SizeMD="7">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-p-12">
          <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="rz-mb-6 --rz-primary-light">
            @Loc["login"]
          </RadzenText>
          <CustomHr></CustomHr>
          <RadzenTemplateForm TItem="LoginRequest" Data="LoginRequest" Submit="@OnSubmit">
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <div class="mb-4">
              <RadzenRow>
                <RadzenColumn SizeSM="12" SizeMD="4">
                  <RadzenLabel class="text-center" Text="@Loc["email_address"]" Component="EmailAddress"></RadzenLabel>
                </RadzenColumn>
                <RadzenColumn SizeSM="12" SizeMD="8">
                  <RadzenTextBox class="w-100"  @bind-Value="@LoginRequest.EmailAddress" MaxLength="@ValidationSettings.MaxEmailLength" Placeholder="example.mail.com"/>
                  <ValidationMessage  For="() => LoginRequest.EmailAddress"></ValidationMessage>
                </RadzenColumn>
              </RadzenRow>
            </div>



            <div class="mb-2">
              <RadzenRow>
                <RadzenColumn SizeSM="12" SizeMD="4">
                  <RadzenLabel class="text-center" Text="@Loc["password"]" Component="Password"></RadzenLabel>
                </RadzenColumn>
                <RadzenColumn SizeSM="12" SizeMD="8">
                  <RadzenPassword Placeholder="*********" class="w-100" @bind-Value="LoginRequest.Password" Name="Password"></RadzenPassword>
                  <ValidationMessage For="() => LoginRequest.Password"></ValidationMessage>
                </RadzenColumn>
              </RadzenRow>
            </div>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.End" JustifyContent="JustifyContent.End">
              <RadzenButton class="mt-4 " ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Icon="login" Text="@Loc["login"]"></RadzenButton>

            </RadzenStack>

          </RadzenTemplateForm>
        </RadzenCard>
      </RadzenColumn>
    </RadzenRow>
  </div>
</RadzenBody>


@code {

  [CascadingParameter]
  public Task<AuthenticationState> AuthTask { get; set; }

  private static string? companyName;
  private static string welcomeMessage;
  private LoginRequest LoginRequest { get; set; } = new();

  protected override async Task OnInitializedAsync() {
    companyName = CompanyInformationService.GetCompanyInformation().CompanyName;
    welcomeMessage = Loc["welcome_message"].Format("companyName", companyName);
    var debugLoginRequest = new LoginRequest {
        Password = "123456789",
        EmailAddress = "owner@mail.com"
      };
    LoginRequest = debugLoginRequest;
  }

  protected override async Task OnAfterRenderAsync(bool firstRender) {
    var authState = await AuthTask;
    if (authState.IsAuthenticated()) {
      Nav.NavigateTo(Nav.Uri, true);
      return;
    }
    if (ConstantMgr.IsDevelopment()) {
      //await OnSubmit();
    }
  }

  private async Task OnSubmit() {
    var result = AdminAccountService.Login(LoginRequest);
    if (result.Status) {
      var admin = result.Data!;
      await ((AdminAuthenticationStateProvider)AuthenticationStateProvider).Login(admin);
      Nav.NavigateTo(Nav.Uri, true);
      return;
    }
    ShowResultNotification(result);
  }


}