@inject ICompanyInformationService CompanyInformationService
@inject IAdminJwtAuthenticator AdminJwtAuthenticator
@using EasMe.Extensions
@using ECom.Shared.DTOs
@using Microsoft.AspNetCore.Mvc
@inherits ResultDialog

<RadzenBody>
  <div class="rz-p-4">

    <PageTitle>@Loc["login"]</PageTitle>

    <RadzenRow Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="max-width: 800px; overflow: hidden; width: 100%;">
      <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="background: var(--rz-primary-light) no-repeat 100% 70% fixed url('data:image/svg+xml;base64,'); height: 100%;">

          <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H4" Class="rz-color-white rz-mb-6">@welcomeMessage</RadzenText>
          <RadzenText TextStyle="TextStyle.Body1" Class="rz-color-white">@Loc["login_page_message"]</RadzenText>
          @*<RadzenText TextStyle="TextStyle.Body2" Class="rz-color-white">Let's get started with your <strong>30 days</strong> trial.</RadzenText>*@
        </RadzenCard>
      </RadzenColumn>
      <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-p-12">
          <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="rz-mb-6">
            @Loc["login"]
          </RadzenText>
          <RadzenTemplateForm TItem="LoginRequest" Data="LoginRequest" Submit="@OnSubmit">
            @*   <DataAnnotationsValidator />
            <ValidationSummary />*@
            <FormInputEmailAddress @bind-EmailAddress="@LoginRequest.EmailAddress"></FormInputEmailAddress>
            <FormInputPassword @bind-Password="LoginRequest.Password"></FormInputPassword>
            <FormSubmitButtonLogin></FormSubmitButtonLogin>
          </RadzenTemplateForm>
        </RadzenCard>
      </RadzenColumn>
    </RadzenRow>
  </div>
</RadzenBody>


@code {

  [Parameter]
  [FromQuery]
  public string? Redirect { get; set; }

  private static string? companyName;
  private static string welcomeMessage;
  private LoginRequest LoginRequest { get; set; } = new();

  protected override async Task OnInitializedAsync() {
    var isAuthenticated = await AuthProvider.IsAuthenticated();
    if (isAuthenticated) {
      NavigatePage();
      return;
    }
    companyName = CompanyInformationService.GetFromCache()?.CompanyName;
    welcomeMessage = companyName == null ? Loc["welcome"] : Loc["welcome_message"].Format("companyName", companyName);
  }

  private async Task OnSubmit() {
    var isAuthenticated = await AuthProvider.IsAuthenticated();
    if (isAuthenticated) {
      NavigatePage();
      return;
    }

    var isValid = LoginRequest.IsValidModel();
    if (!isValid) {
      ShowNotification(NotificationSeverity.Error, Loc["form_state_invalid"]); //LOC ?
      return;
    }

    var result = AdminJwtAuthenticator.Authenticate(LoginRequest);
    if (result.Status) {
      await AuthProvider.Login(result.Data);
      NavigatePage();
      return;
    }
    ShowResultNotification(result);
  }

  private void NavigatePage() {
    Nav.NavigateTo(Nav.Uri, true);
  //Nav.NavigateTo("/", true);

  //if (string.IsNullOrEmpty(Redirect)) {
  //  Nav.NavigateTo("/dashboard", true);
  //  return;
  //}
  //Nav.NavigateTo(Redirect, true);
  }

}